if [ "$1" = "configure" ] || [ "$1" = "abort-upgrade" ] || [ "$1" = "abort-deconfigure" ] || [ "$1" = "abort-remove" ] ; then
	if [ -n "$2" ]; then
		_dh_action=#RESTART_ACTION#
	else
		_dh_action=start
	fi
	# TODO: iterate over the unit files
	for name in "#UNITFILES#"; do
		/etc/init.d/"${name%.*}" $_dh_action ||:
	done
fi